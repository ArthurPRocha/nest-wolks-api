generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id String @id @default(uuid()) @map("_id")

  model     String   @unique
  year      String
  price     Float
  info      String
  image_url String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@map("tb_cars")
}

model User {
  id        String   @id @default(uuid()) @map("_id")
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cars      Car[]
  questions   Question[]

  @@map("tb_users")
}

model Question {
  id        String   @id @default(uuid()) @map("_id")
  question  String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tb_secret_questions")
}
